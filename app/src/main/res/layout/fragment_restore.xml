    android:gravity="center"
    android:fitsSystemWindows="true">

    <TextView
        android:text="Restaurar eventos"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/fresh_blue_700"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Selecciona un archivo de respaldo previamente guardado para restaurar tus eventos. Si lo subiste a Drive, descÃ¡rgalo primero."
